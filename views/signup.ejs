<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
</head>
<body>
    <form action="/signup-verify" method="post">
        <label>Enter name: </label>
        <input class="inputs" type="text" name="username"><br>
        <label>Enter age: </label>
        <input class="inputs" type="number" name="age"><br>
        <label>Enter password: </label>
        <input class="inputs" type="password" name="password"><br>
        <button type="submit">SignUP</button>
    </form>
    <button id="btn">back</button>
    <div id="errMszDiv" style="display: block;">
        <% if(alreadySigned) { %>
            <h3 style="color: red; font: bold;"> You're already signed up with "<%= name %>" name </h3>
        <% } %>
    </div>
</body>
<script>
    const inputFileds = document.querySelectorAll(".inputs");
    const errMszDiv = document.getElementById("errMszDiv");

    const back_btn = document.getElementById("btn");
    back_btn.onclick = () => window.location.href = "http://localhost:1000";

    inputFileds[0].onclick = chkFunc;
    inputFileds[1].onclick = chkFunc;
    inputFileds[2].onclick = chkFunc;

    function chkFunc() {
        let displayState = errMszDiv.style.display;
        if(displayState === "block")
            errMszDiv.style.display = "none";
        // alert(displayState);        
    }
</script>
</html>