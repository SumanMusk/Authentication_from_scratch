<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    <form action="/login-verify" method="post">
        <label>Enter name: </label>
        <input class="inputs" type="text" name="username"><br>
        <label>Enter password: </label>
        <input class="inputs" type="password" name="password"><br>
        <button type="submit">Login</button>
    </form>
    <button id="btn">back</button>
    <br>
    <span style="margin-left: 5px;">New User?</span>
    <a href="/sign-up" style="margin-left: 2px;">Signup</a>
    <% if(isAccExists) { %>
        <h3 class="errMsz" style="display: block; color: red; margin: 4%;">Account Doesn't exists</h3>
    <% } else if(isWrongName) { %>
        <h3 class="errMsz" style="display: block; color: red; margin: 4%;">Incorrect Name</h3>
    <% } else if(isWrongPass) { %>
        <h3 class="errMsz" style="display: block; color: red; margin: 4%;">Incorrect Password</h3>
    <% } %>
</body>
<script>
    const errDiv = document.querySelector(".errMsz");
    const inputFields = document.querySelectorAll(".inputs");

    const back_btn = document.getElementById("btn");
    back_btn.onclick = () => window.location.href = "http://localhost:1000/";
    
    for(let i=0;i<inputFields.length;i++) {
        const displayState = errDiv.style.display;
        inputFields[i].onclick = () => {
            if(displayState === "block")
                errDiv.style.display = "none";
        }
    }
</script>
</html>